<Application x:Class="Librurari.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Librurari"
             StartupUri="FormAuthorization.xaml">
    <Application.Resources>
        <Style TargetType="TextBlock" x:Key="TxbBigtStyle">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="30"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="TxbDefaultStyle">
            <Setter Property="FontFamily" Value="Tw Cent MT"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
        <Style TargetType="Button" x:Key="DefautStyle">
            <Setter Property="FontSize" Value="30"/>
        </Style>
        <Style TargetType="ComboBox" x:Key="CbDefaultStyle">
            <Setter Property="FontFamily" Value="Tw Cent MT"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
        <Style TargetType="TextBox" x:Key="TxSearchStyle">
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="Background" Value="#FFFFFFFA"/>
        </Style>
    </Application.Resources>
    
</Application>
